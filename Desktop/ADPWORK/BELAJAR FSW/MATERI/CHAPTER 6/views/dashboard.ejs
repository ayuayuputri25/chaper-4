<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <!-- bootstrap JS-->
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <h3>Welcome,</h3>
    <table style="border: 1px solid black;border-collapse: collapse; ">
       <thead>
        <tr>
            <th style="border: 1px rgb(217, 65, 156); padding: 5px;">id</th>
            <th style="border: 1px rgb(217, 65, 156); padding: 5px;">username</th>
            <th style="border: 1px rgb(217, 65, 156); padding: 5px;">password</th>
            <th style="border: 1px rgb(217, 65, 156); padding: 5px;">first name</th>
            <th style="border: 1px rgb(217, 65, 156); padding: 5px;">last name</th>
            <th style="border: 1px rgb(217, 65, 156); padding: 5px;">birthplace</th>
            <th style="border: 1px rgb(217, 65, 156); padding: 5px;">Action</th>
        </tr>
       </thead>
        <tbody>
        <% users.forEach(user => {%>
            <tr>
                <td style="border: 1px rgb(217, 65, 156); padding: 5px;"><%= user.id %></td>
                <td style="border: 1px rgb(217, 65, 156); padding: 5px;"><%= user.username %></td>
                <td style="border: 1px rgb(202, 56, 131); padding: 5px"><%= user.password %></td>
                <td style="border: 1px rgb(202, 56, 131); padding: 5px"><%= user.user_game_biodatum.first_name %></td>
                <td style="border: 1px rgb(202, 56, 131); padding: 5px"><%= user.user_game_biodatum.last_name %></td>
                <td style="border: 1px rgb(202, 56, 131); padding: 5px"><%= user.user_game_biodatum.birthplace %></td> 
                
                <td style="border: 1px rgb(202, 56, 131); padding: 5px">
                    <a href="/user/<%= user.id %>/edit">update</a>
                    <a href="/user/<%= user.id %>/delete">delete</a>
                </td>
            </tr>
        <% }) %>
       </tbody>
    </table>
    <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Create New User
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form action="/user" method="post"> 
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add User</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" name="username" placeholder="insert user name">
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" placeholder="insert user password">
              </div>
              <div class="mb-3">
                <label for="first_name" class="form-label">first name</label>
                <input type="text" class="form-control" name="first_name" placeholder="insert first name">
              </div>
              <div class="mb-3">
                <label for="last_name" class="form-label">last name</label>
                <input type="text" class="form-control" name="last_name" placeholder="insert last name">
              </div>
              <div class="mb-3">
                <label for="birthplace" class="form-label">birthplace</label>
                <input type="text" class="form-control" name="birthplace" placeholder="insert birthplace">
              </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Create User</button>
        </div>
      </div>
    </form>
    </div>
  </div>
    <a href=""></a>
</body>
</html>